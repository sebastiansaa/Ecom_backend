generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String   @id
  tokenHash String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime?
  device    String?
  @@index([userId])
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  image     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  // Usar Decimal para precios evita errores de redondeo con Float
  // Precision/escala: ajustar seg√∫n necesidades (ej. 10,2)
  price       Decimal  @db.Decimal(10,2)
  description String
  images      String[]  // Prisma soporta arrays en PostgreSQL
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
}
